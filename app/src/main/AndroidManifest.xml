<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="jp.onetake.binzumejigoku">

	<!-- Google Playで住所を公開する予定はないので実装済みのIABは無効にしておく -->
	<!-- uses-permission android:name="com.android.vending.BILLING" / -->

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/StandardTheme">
		<activity android:name=".activity.LaunchActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activity.MainActivity">
		</activity>
		<activity
			android:name=".activity.ContentsActivity"
			android:theme="@style/TranslucentStatusBarTheme">
		</activity>
		<activity
			android:name=".activity.SaveActivity"
			android:theme="@style/TranslucentActivityTheme">
		</activity>
		<activity
			android:name=".activity.SettingActivity"
			android:theme="@style/SettingActivityTheme">
		</activity>
		<activity
			android:name=".activity.BacklogActivity"
			android:theme="@style/TranslucentActivityTheme">
		</activity>
		<activity
			android:name=".activity.TutorialActivity"
			android:theme="@style/TranslucentActivityTheme">
		</activity>
		<activity
			android:name=".activity.PurchaseActivity"
			android:theme="@style/TranslucentActivityTheme">
		</activity>
	</application>

</manifest>
