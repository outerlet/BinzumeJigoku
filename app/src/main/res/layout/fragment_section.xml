<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragment.SectionFragment">

	<jp.onetake.binzumejigoku.view.RubyTextView
		android:id="@+id/rubyview_contents"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="8dp"
		custom:textSize="18sp"
		custom:rubySize="8sp"
		custom:period="50"
		custom:lineSpace="0dp"
		custom:sentenceSpace="12dp"
		/>

	<jp.onetake.binzumejigoku.view.TitleTextView
		android:id="@+id/titleview_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="invisible"
		custom:duration="1000"
		custom:titleSize="24sp"
		custom:titleColor="@android:color/black"
		custom:period="50"
		/>

	<View
		android:id="@+id/view_accept_touch"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		/>

</FrameLayout>
