<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/tutorial_margin"
	android:background="@color/black_translucent_soft"
	tools:context="jp.onetake.binzumejigoku.activity.TutorialActivity">

	<jp.onetake.binzumejigoku.view.PagerIndicatorView
		android:id="@+id/pager_indicator_tutorial"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		app:radius="@dimen/pager_indicator_radius"
		app:space="@dimen/pager_indicator_space"
		app:activeColor="@color/white"
		app:inactiveColor="@color/gray"
		/>

	<android.support.v4.view.ViewPager
		android:id="@+id/viewpager_tutorial"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_above="@+id/pager_indicator_tutorial"
		/>

</RelativeLayout>
