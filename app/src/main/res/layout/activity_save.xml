<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorBlackTranslucent"
	android:alpha="0"
	tools:context="jp.onetake.binzumejigoku.activity.SaveActivity">

	<Button
		android:id="@+id/button_save2"
		android:layout_centerInParent="true"
		android:text="@string/label_save_slot2"
		style="@style/SaveButton"
		/>

	<Button
		android:id="@+id/button_save1"
		android:layout_above="@+id/button_save2"
		android:layout_marginBottom="60dp"
		android:text="@string/label_save_slot1"
		style="@style/SaveButton"
		/>

	<Button
		android:id="@+id/button_save3"
		android:layout_below="@+id/button_save2"
		android:layout_marginTop="60dp"
		android:text="@string/label_save_slot3"
		style="@style/SaveButton"
		/>

</RelativeLayout>
